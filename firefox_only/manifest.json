{
	"manifest_version": 3,
	"name": "AccessibilityPlus",
	"author": "kgsensei",
	"description": "An extension designed to help dyslexic people read text on websites.",
	"version": "1.3",
	"action": {
		"default_icon": "icon_500.png",
		"default_popup": "dash.html"
	},
	"icons": {
        "128": "icon_128.png",
		"500": "icon_500.png"
	},
	"permissions": [
		"scripting",
        "activeTab",
        "storage",
        "tabs"
	],
	"host_permissions": [
		"<all_urls>",
        "*://*/*"
	],
	"background": {
    	"scripts": [
            "background.js"
        ]
  	},
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "css": [
                "resources/ap-font-import.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "matches": [
                "*://*/*"
            ],
            "resources": [
                "resources/dyslexia.woff"
            ]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "accessibilityplus@kgsensei.dev"
        }
    }
}
